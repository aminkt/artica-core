{
	"name": "artica/core",
	"description": "Core of artica framework base on yii2",
  	"keywords": ["yii2", "artica"],
	"type": "yii2-extension",
	"support": {
		"source": "https://github.com/aminkt/artica-core"
	},
	"prefer-stable" : true,
	"authors": [
		{
			"name": "Amin Keshavarz",
			"email": "ak_1596@yahoo.com"
		}
	],
	"require": {
        "php": "~7.3.6",
        "ext-json": "*",
		"ext-openssl": "*",
		"ext-pdo": "*",
        "yiisoft/yii2": "~2.0.23",
		"yiisoft/yii2-bootstrap": "~2.0.0",
		"yiisoft/yii2-swiftmailer": "~2.0.0 || ~2.1.0",
		"vlucas/phpdotenv": "^3.3",
		"firebase/php-jwt": "~5.0.0",
		"yiisoft/yii2-queue": "~2.3.0",
		"yiisoft/yii2-redis": "~2.0.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^8"
	},
	"autoload": {
		"psr-4": {"Artica\\": "src"}
	},
	"autoload-dev": {
		"psr-4": {"Artica\\Test\\": "test"}
	}
}
